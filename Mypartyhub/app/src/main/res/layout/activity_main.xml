<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/photoIDtext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fotoId"
        android:layout_marginLeft="8dp"
        android:text="Photo ID" />

    <EditText
        android:id="@+id/fotoId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photoIDtext" />

    <TextView
        android:id="@+id/partyID"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etFeestId"
        android:layout_below="@id/photoIDtext"
        android:layout_marginLeft="8dp"
        android:text="Party ID" />

    <EditText
        android:id="@+id/etFeestId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fotoId"
        android:layout_toRightOf="@id/partyID" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFeestId"
        android:layout_gravity="center_horizontal"
        android:text="GET" />


    <ImageView
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPost"
        android:drawingCacheQuality="auto" />


</RelativeLayout>
